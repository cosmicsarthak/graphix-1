{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(sections)/works.jsx",
    "app/(sections)/intro.jsx",
    "app/(sections)/hero.tsx",
    "app/layout.jsx",
    "app/page.jsx",
    "app/lot/page.jsx",
    "app/skill/page.jsx",
    "app/skill/skillspagesc.tsx"
  ],
  "exclude": ["node_modules"]
}
